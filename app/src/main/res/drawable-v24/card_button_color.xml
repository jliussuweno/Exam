<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <gradient
                android:angle="180"
                android:startColor="#03A9F4"
                android:endColor="#B3E5FC"
                android:type="linear" />

            <corners android:radius="100dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#03A9F4" />

            <corners android:radius="100dp" />
        </shape>
    </item>

</selector>